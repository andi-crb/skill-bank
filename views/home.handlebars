<div class="container">
  <nav>
    <div class="row">
      <div class="six columns">
        <input class="u-full-width" type="text" name="search">
      </div>
      <!-- <div class="two columns">
        <button class="button-primary" type="button" name="button">search</button>
      </div> -->
      <div class="six columns">
        <select class="u-full-width" name="categories">
          <option value="all">all</option>
          <option value="languages">languages</option>
          <option value="locations">locations</option>
          <option value="technical">techincal</option>
          <option value="random">random</option>
        </select>
      </div>
    </div>
  </nav>
  <div>
      {{#each people}}
        <div >
          <h2>{{name}}<span class="deletePerson" id="{{id}}">x</span></h2>
          <p>{{email}}</p>
          <div id="skillDiv">
            {{#each skills.languages}}
              <span class="languages skills">{{this}}<span class="delete">x<span></span>
            {{/each}}
            {{#each skills.technical}}
              <span class="technical skills">{{this}}<span class="delete">x<span></span>
            {{/each}}          
            {{#each skills.locations}}
              <span class="locations skills">{{this}}<span class="delete">x<span></span>
            {{/each}}
          </div>
        <div>
      {{/each}}
    </div>
</div>


